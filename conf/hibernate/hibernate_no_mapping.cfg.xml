<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5510/world-db</property>
        <property name="hibernate.connection.username">world</property>
        <property name="hibernate.connection.password">world123</property>

        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL95Dialect</property>
        
        <!-- Restriction Schema -->
        <!--<property name="hibernate.default_schema">public</property>-->
        
        <!-- No entities mapping needed  -->
    </session-factory>
</hibernate-configuration>
